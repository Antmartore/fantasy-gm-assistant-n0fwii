// Product Configuration
PRODUCT_NAME = Fantasy GM Assistant Dev
PRODUCT_BUNDLE_IDENTIFIER = com.fantasygm.assistant.debug
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM_ID)
CODE_SIGN_STYLE = Automatic

// Build Settings
GCC_OPTIMIZATION_LEVEL = 0
SWIFT_OPTIMIZATION_LEVEL = -Onone
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1 $(inherited)

// Deployment Settings
TARGETED_DEVICE_FAMILY = 1
IPHONEOS_DEPLOYMENT_TARGET = 14.0
SWIFT_VERSION = 5.0
ENABLE_BITCODE = NO

// Environment Variables
API_BASE_URL = http:\/\/localhost:8000
FIREBASE_ENVIRONMENT = development
ENABLE_LOGGING = YES
ENABLE_ANALYTICS = NO
ENABLE_CRASH_REPORTING = NO

// Code Signing
CODE_SIGN_IDENTITY = iPhone Developer
CODE_SIGN_STYLE = Automatic
PROVISIONING_PROFILE_SPECIFIER = Fantasy GM Assistant Development

// App Sandbox Settings
ENABLE_APP_SANDBOX = YES
APP_SANDBOX_INHERIT = YES

// Development Features
ENABLE_PUSH_NOTIFICATIONS = YES
ENABLE_BACKGROUND_MODES = YES
ENABLE_SIGN_IN_WITH_APPLE = YES
ENABLE_KEYCHAIN_SHARING = YES
ENABLE_ASSOCIATED_DOMAINS = YES
ENABLE_HOT_RELOAD = YES
ENABLE_DEBUG_LOGGING = YES
ENABLE_NETWORK_DEBUGGING = YES

// Include base configuration
#include "Pods/Target Support Files/Pods-FantasyGMAssistant/Pods-FantasyGMAssistant.debug.xcconfig"

// Custom Compiler Flags
OTHER_SWIFT_FLAGS = -D DEBUG
GCC_WARN_UNUSED_VARIABLE = YES
GCC_WARN_ABOUT_RETURN_TYPE = YES_ERROR
CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER = YES
CLANG_WARN_DOCUMENTATION_COMMENTS = YES

// Development Assets
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon.dev
INFOPLIST_FILE = FantasyGMAssistant/Info.plist
INFOPLIST_KEY_CFBundleDisplayName = GM Assistant Dev

// Development Capabilities
DEVELOPMENT_ASSET_PATHS = "FantasyGMAssistant/Preview Content"
ENABLE_PREVIEWS = YES
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG

// Debug Specific Settings
MTL_ENABLE_DEBUG_INFO = INCLUDE_SOURCE
MTL_FAST_MATH = YES
ONLY_ACTIVE_ARCH = YES