<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Text Appearance -->
    <style name="TextAppearance.FantasyGM.Base" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.FantasyGM.Headline1" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.FantasyGM.Headline2" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.FantasyGM.Body1" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.FantasyGM.Body2" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.FantasyGM.Caption" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.FantasyGM.Button" parent="TextAppearance.FantasyGM.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.FantasyGM.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.FantasyGM.Button</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.FantasyGM.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.FantasyGM.Button</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.FantasyGM.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="contentPadding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.FantasyGM.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">56dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorTextSecondary</item>
    </style>

    <style name="Widget.FantasyGM.List" parent="Widget.MaterialComponents.ListView">
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.FantasyGM.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.FantasyGM.Headline2</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.FantasyGM.Body2</item>
    </style>

    <style name="Widget.FantasyGM.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorSurface</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemRippleColor">@color/colorRipple</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Layout Styles -->
    <style name="Layout.FantasyGM.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Layout.FantasyGM.Spacing.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="Layout.FantasyGM.Spacing.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Layout.FantasyGM.Spacing.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Layout.FantasyGM.Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Layout.FantasyGM.Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

</resources>